prototype(Garagist.Mautic:Component.ModalHeader) < prototype(Neos.Fusion:Component) {
    content = null

    @if.hasContent = ${this.content}

    renderer = afx`
        <div class="neos-modal-header">
            <button data-dismiss="modal" type="button" class="neos-close neos-button"></button>
            <div class="neos-header">
                {props.content}
            </div>
        </div>
    `
}
