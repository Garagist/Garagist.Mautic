# http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Exceptions
[{*.{yaml,yml,sh,jscsrc},package.json,.*rc}]
indent_size = 2

[*.pcss]
max_line_length = 300
indent_size = 2

# All kind of JS files
[*.{js,jsx}]
max_line_length = 120

[*.json]
max_line_length = 1000

[*.{htm,html}]
max_line_length = 200
indent_size = 2

# Markdown uses trailing whitespace for line breaks
[*.md]
max_line_length = 120
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
